<body>
  <div class="card">
    <h1>2×2 Eigenvalues & Eigenvectors</h1>

    <p>Enter a real 2×2 matrix and click <strong>Compute</strong>.</p>

    <div class="matrix">
      <input id="a" type="number" step="any" value="2" />
      <input id="b" type="number" step="any" value="1" />
      <input id="c" type="number" step="any" value="1" />
      <input id="d" type="number" step="any" value="2" />
    </div>

    <div class="options">
      <button onclick="compute()">Compute</button>
      <label>
        <input id="normalize" type="checkbox" checked />
        Normalize eigenvectors
      </label>
    </div>

    <pre id="output"></pre>

    <footer>
      Works offline • Free to embed in Canvas • No data collected
    </footer>
  </div>

<script>
function compute() {
  const a = parseFloat(document.getElementById("a").value);
  const b = parseFloat(document.getElementById("b").value);
  const c = parseFloat(document.getElementById("c").value);
  const d = parseFloat(document.getElementById("d").value);
  const normalize = document.getElementById("normalize").checked;

  if (![a,b,c,d].every(Number.isFinite)) {
    document.getElementById("output").textContent =
      "Please enter valid numbers in all matrix entries.";
    return;
  }

  const trace = a + d;
  const det = a*d - b*c;
  const disc = trace*trace - 4*det;

  function fmt(x) {
    return Math.abs(x) < 1e-10 ? "0" : x.toFixed(6);
  }

  function norm(v) {
    const n = Math.hypot(v[0], v[1]);
    return n === 0 ? v : [v[0]/n, v[1]/n];
  }

  let output = "";
  output += `Matrix A = [[${a}, ${b}], [${c}, ${d}]]\n`;
  output += `trace(A) = ${trace}\n`;
  output += `det(A) = ${det}\n\n`;

  if (disc >= 0) {
    const sqrtDisc = Math.sqrt(disc);
    const lambda1 = (trace + sqrtDisc)/2;
    const lambda2 = (trace - sqrtDisc)/2;

    function eigenvector(lambda) {
      if (Math.abs(b) > 1e-8)
        return [-b, a - lambda];
      else
        return [d - lambda, -c];
    }

    let v1 = eigenvector(lambda1);
    let v2 = eigenvector(lambda2);

    if (normalize) {
      v1 = norm(v1);
      v2 = norm(v2);
    }

    output += `λ₁ = ${fmt(lambda1)}\n`;
    output += `v₁ = (${fmt(v1[0])}, ${fmt(v1[1])})\n\n`;
    output += `λ₂ = ${fmt(lambda2)}\n`;
    output += `v₂ = (${fmt(v2[0])}, ${fmt(v2[1])})\n`;

  } else {
    const real = trace/2;
    const imag = Math.sqrt(-disc)/2;

    output += `λ₁ = ${fmt(real)} + ${fmt(imag)} i\n`;
    output += `λ₂ = ${fmt(real)} − ${fmt(imag)} i\n\n`;
    output += "Eigenvectors are complex and not shown in this real-valued interface.\n";
  }

  document.getElementById("output").textContent = output;
}

compute();
</script>
